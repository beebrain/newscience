# CodeIgniter4 Environment Configuration
# Copy this file to .env and configure for your environment

# -------------------------------------------------------------------------
# ENVIRONMENT
# -------------------------------------------------------------------------
# CI_ENVIRONMENT = development
CI_ENVIRONMENT = production

# -------------------------------------------------------------------------
# APP CONFIG
# -------------------------------------------------------------------------
app.baseURL = 'http://your-domain.com/'
app.indexPage = 'index.php'
app.appTimezone = 'Asia/Bangkok'
app.defaultLocale = 'th'
app.negotiateLocale = true
app.supportedLocales = ['en', 'th']

# -------------------------------------------------------------------------
# DATABASE
# -------------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = newscience_prod
database.default.username = your_db_username
database.default.password = your_db_password
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

# -------------------------------------------------------------------------
# SESSION
# -------------------------------------------------------------------------
session.driver = file
session.cookieName = ci_session
session.expiration = 7200
session.savePath = WRITEPATH . 'session'
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

# -------------------------------------------------------------------------
# COOKIE
# -------------------------------------------------------------------------
cookie.prefix = 
cookie.expires = 
cookie.path = /
cookie.domain = ''
cookie.secure = true
cookie.httponly = false
cookie.samesite = Lax

# -------------------------------------------------------------------------
# ENCRYPTION
# -------------------------------------------------------------------------
encryption.key = 'Your32CharacterEncryptionKeyHere!!'
encryption.driver = OpenSSL
encryption.blockSize = 16
encryption.digest = SHA512

# -------------------------------------------------------------------------
# CONTENT SECURITY POLICY
# -------------------------------------------------------------------------
CSPEnabled = false

# -------------------------------------------------------------------------
# HONEYPOT
# ---
honeypot.secret = 'YourSecretHoneypotKey'
honeypot.container = '<div style="display:none">{label}</div>'
honeypot.label = 'Fill This Field'
honeypot.name = 'honeypot'
honeypot.template = '{label}<input type="text" name="{name}" value="">'

# -------------------------------------------------------------------------
# PROXY
# -------------------------------------------------------------------------
proxy.host = ''
proxy.port = ''
proxy.username = ''
proxy.password = ''

# -------------------------------------------------------------------------
# UPLOADS
# -------------------------------------------------------------------------
upload.maxSize = 20480
upload.maxWidth = 0
upload.maxHeight = 0
upload.maxFilename = 0
upload.maxFilenameIncrement = 100
upload.maxFiles = 25
upload.mimeTypes = ['image/jpeg', 'image/png', 'image/gif', 'application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document']
upload.removeSpaces = true
upload.useReturn = false

# -------------------------------------------------------------------------
# LOG THRESHOLD
# -------------------------------------------------------------------------
log.threshold = ENVIRONMENT === 'production' ? 4 : 9

# -------------------------------------------------------------------------
# CACHE
# ---
cache.handler = file
cache.prefix = ''
cache.ttl = 60
cache.reservedCharacters = '\/?:*[]()'

# -------------------------------------------------------------------------
# URU PORTAL OAUTH 2.0
# -------------------------------------------------------------------------
uruoauth.clientId       = sci
uruoauth.clientSecret   = secret
# Production callback URL (ต้องตรงกับที่ลงทะเบียนไว้ใน URU Portal)
uruoauth.callbackUrl    = https://sci.uru.ac.th/index.php/oauth
# Development callback URL (ใช้เมื่อ ENVIRONMENT=development)
uruoauth.callbackUrlLocal = http://localhost/newScience/index.php/oauth
uruoauth.enabled        = true
# Endpoints (ปกติไม่ต้องเปลี่ยน)
# uruoauth.loginUrl     = https://uruportal.uru.ac.th/oauth_login
# uruoauth.tokenUrl     = https://uruportal.uru.ac.th/oauth/token
# uruoauth.userInfoUrl  = https://uruportal.uru.ac.th/me

# -------------------------------------------------------------------------
# EMAIL
# -------------------------------------------------------------------------
email.fromEmail = 'noreply@your-domain.com'
email.fromName = 'Your App Name'
email.protocol = smtp
email.SMTPHost = smtp.your-provider.com
email.SMTPUser = your-smtp-username
email.SMTPPass = your-smtp-password
email.SMTPPort = 587
email.SMTPTimeout = 5
